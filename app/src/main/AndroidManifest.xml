<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.mycontacts" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AddContactsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MyContactsActivity"
            android:label="@string/title_activity_my_contacts" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UpdateContactsActivity"
            android:label="@string/title_activity_update_contacts" >
        </activity>
        <activity
            android:name=".FindDialog"
            android:label="@string/title_activity_find_dialog" >
        </activity>
        <activity
            android:name=".ContactsMessageActivity"
            android:label="@string/title_activity_contacts_message" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.write_contacts"/>
</manifest>

